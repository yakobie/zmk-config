/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios
            = <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;  // Using pin P0.10 as example
    };
	
	vbatt {
        compatible = "zmk,battery-voltage-divider";
        io-channels = <&adc 7>;  // For the default battery pin on nice!nano
        output-ohms = <2000000>;
        full-ohms = <(2000000 + 806000)>;
    };
};